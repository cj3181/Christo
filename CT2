#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{   int n,min1,min2;
    scanf("%d", &n);
    int l = n*2 - 1;
    for(int i=1;i<=l;i++)
    {   for(int j=1;j<=l;j++)
        {   if (i<=l-i) 
            min1=i-1;
            else
            min1=l-i;
            if (j<=l-j)
            min2=j-1;
            else 
            min2=l-j;
            if (min1<=min2) 
             printf("%d ",(n-min1));          
            else 
              printf("%d ",(n-min2));
        }printf("\n");  
    }
}
